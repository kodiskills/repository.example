<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.sportsaccess" name="SportsAccess" version="2.2.5" provider-name="SportsAccess">
    <requires>
		<import addon="xbmc.python" version="2.19.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
		<import addon="script.common.plugin.cache" version="0.9.1"/>
        <import addon="script.module.pytz" version="2014.2"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">SportsAccess Sports</summary>
        <description lang="en">Get all your Live sports here</description>
        <platform>all</platform>
        <assets>
          <icon>resources/icon.png</icon>
          <fanart>resources/fanart.jpg</fanart>
          <screenshot>resources/screenshot001.png</screenshot>
          <screenshot>resources/screenshot002.png</screenshot>
          <screenshot>resources/screenshot003.png</screenshot>
        </assets>
  </extension>
</addon>

<addon id="repository.sbtest" name="SB_Test_Repo" version="0.0.1" provider-name="Supreme Builds">
    <extension point="xbmc.addon.repository" name="SB_Test_Repo">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/kodiskills/SB_Test_Repo/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/kodiskills/SB_Test_Repo/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/kodiskills/SB_Test_Repo/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>SB_Test_Repo</summary>
        <description>This repo is used for testing purposes and tutorials only</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
